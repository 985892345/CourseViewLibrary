<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.lib.courseview.course.CourseLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:net_rowCount="4"
    app:net_columnCount="8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_time"
        android:textStyle="bold"
        android:gravity="center"
        app:course_day="0"
        app:course_lessonStartPos="1"
        app:course_lessonLength="1"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_time"
        android:textStyle="bold"
        android:gravity="center"
        app:course_day="0"
        app:course_lessonStartPos="2"
        app:course_lessonLength="1"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_time"
        android:textStyle="bold"
        android:gravity="center"
        app:course_day="0"
        app:course_lessonStartPos="3"
        app:course_lessonLength="1"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_time"
        android:textStyle="bold"
        android:gravity="center"
        app:course_day="0"
        app:course_lessonStartPos="4"
        app:course_lessonLength="1"
        tools:ignore="HardcodedText,SpUsage" />

</com.mredrock.cyxbs.lib.courseview.course.CourseLayout>